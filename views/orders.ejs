<%- contentFor('body') %>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="m-0">My Orders</h2>
                <a href="/products" class="btn btn-primary">
                    <i class="fas fa-shopping-bag me-2"></i>
                    Continue Shopping
                </a>
            </div>
            
            <!-- Orders List -->
            <div class="orders-list">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-shopping-bag fa-3x text-muted"></i>
                    </div>
                    <h3 class="h4 mb-3">No Orders Yet</h3>
                    <p class="text-muted mb-4">
                        Looks like you haven't placed any orders yet.<br>
                        Browse our collection and find something you love!
                    </p>
                    <div class="featured-categories">
                        <a href="/products?category=men" class="btn btn-outline-primary me-2">
                            <i class="fas fa-male me-2"></i>Shop Men's
                        </a>
                        <a href="/products?category=women" class="btn btn-outline-primary">
                            <i class="fas fa-female me-2"></i>Shop Women's
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('styles') %>
<style>
.orders-list {
    background: #fff;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
}

.btn-primary, .btn-outline-primary {
    padding: 0.625rem 1.25rem;
    font-weight: 500;
    border-radius: 6px;
}

.btn-outline-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.featured-categories {
    display: flex;
    justify-content: center;
    gap: 1rem;
}

.text-muted {
    color: #6c757d !important;
}

.fa-shopping-bag {
    opacity: 0.5;
}

@media (max-width: 576px) {
    .featured-categories {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .featured-categories .btn {
        width: 100%;
    }
    
    .btn-outline-primary {
        margin-right: 0 !important;
    }
}
</style>

